{
    "info": {
        "_postman_id": "c9f4d1e2-1234-5678-9abc-def012345678",
        "name": "ManxiSpa API - Phase 1",
        "description": "Collection to test Zalo Login and Booking flows.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Zalo Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.accessToken) {",
                                    "    pm.environment.set(\"jwt_token\", jsonData.accessToken);",
                                    "    console.log(\"Token set to environment variable 'jwt_token'\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\r\n    \"accessToken\": \"YOUR_REAL_ZALO_ACCESS_TOKEN_HERE\"\r\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/zalo-login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "zalo-login"
                            ]
                        },
                        "description": "Use a real Zalo access token here to get a JWT."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Bookings",
            "item": [
                {
                    "name": "Create Guest Booking (No Login)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\r\n    \"bookingType\": \"guest\",\r\n    \"serviceIds\": [\r\n        \"67760920f065a4435882e3f5\" \r\n    ],\r\n    \"bookingDate\": \"2025-01-20\",\r\n    \"bookingTime\": \"14:30\",\r\n    \"guestInfo\": {\r\n        \"fullName\": \"Guest User 01\",\r\n        \"phone\": \"0987654321\",\r\n        \"email\": \"guest@example.com\"\r\n    },\r\n    \"paymentMethod\": \"cash\"\r\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/bookings",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "bookings"
                            ]
                        },
                        "description": "Replace serviceIds with a real Service ID from your database."
                    },
                    "response": []
                },
                {
                    "name": "Create Member Booking (Logged In)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\r\n    \"bookingType\": \"member\",\r\n    \"serviceIds\": [\r\n        \"67760920f065a4435882e3f5\"\r\n    ],\r\n    \"bookingDate\": \"2025-01-21\",\r\n    \"bookingTime\": \"09:00\",\r\n    \"customerNote\": \"Member booking test\",\r\n    \"paymentMethod\": \"zalopay\"\r\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/bookings",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "bookings"
                            ]
                        },
                        "description": "Requires {{jwt_token}} set from Zalo Login response."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Services (Helper)",
            "item": [
                {
                    "name": "List All Services",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/services",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "services"
                            ]
                        },
                        "description": "Use this to get Service IDs for booking requests."
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080",
            "type": "string"
        }
    ]
}